{
  "openapi": "3.0.0",
  "info": {
    "title": "Crypto Analyzer",
    "description": "This API helps to provide some insightful endpoints for analyzing cryptocurrency. Users have the option of retrieving cryptocurrency prices on different exchange platforms, getting the best selling or buying prices for a particular asset pair, and more. The retrieved data can be downloaded in Excel format for further analysis.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8030/api/v1",
      "description": "Local Proto Testnet server",
    },
    {
      "url": "https://jodev-crypt-api.onrender.com/api/v1",
      "description": "Live server on Render.com platform",
    }
  ],

  "components": {
    "schemas": {

      "ExchangeData": {
        "type": "object",
        "properties": {
          "price": {
            "type": "number"
          },
          "exchange": {
            "type": "string"
          },
          "pair": {
            "type": "string"
          },
          "pairPrice": {
            "type": "number"
          },
          "volume": {
            "type": "number"
          }
        }
      },

      "CoinData": {
        "type": "object",
        "properties": {
          "rank": {
            "type": "number"
          },
          "id": {
            "type": "number"
          },
          "coin": {
            "type": "string"
          },
          "presentPrice": {
            "type": "number"
          },
          "oneHourPrice": {
            "type": "number"
          },
          "oneDayPrice": {
            "type": "number"
          },
          "oneWeekPrice": {
            "type": "number"
          },
          "priceChange1h": {
            "type": "number"
          },
          "priceChange1d": {
            "type": "number"
          },
           "priceChange1w": {
            "type": "number"
          },
          "volumeTraded": {
            "type": "number"
          },
          "contractAddress": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      },

      "CoinSymbolicId": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "symbol": {
            "type": "string"
          }
        }
      },

      "HistoricalPriceResponse": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "$ref": "#/components/schemas/PriceWithTrend"
            },
            {
              "$ref": "#/components/schemas/PriceWithoutTrend"
            }
          ]
        }
      },

      "PriceWithoutTrend": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string"
          },
          "time": {
            "type": "string"
          },
          "price": {
            "type": "number"
          }
        }
      },

      "PriceWithTrend": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string"
          },
          "time": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "priceChange": {
            "type": "number"
          },
          "changeDirection": {
            "type": "string"
          }
        }
      }

    }
  },
  
  "paths": {

    "/coins": {
      "get": {
        "summary": "Retrieve current coin Data",
        "description": "This get current live coin  data. Data retrieved provides insightful details about the coin price, rank, it price change within the time period as well as it contract address if any available for the crypto coin.",
        "parameters": [
            {
              "name": "skip",
              "in": "query",
              "description": "numbers of coin to skip retrieving",
              "required": false,
              "default": 0,
              "schema": {
                "type": "number"
              }
            },
            
            {
              "name": "limit",
              "in": "query",
              "description": "The maximum number of coin to retrieved",
              "required": false,
              "default": 20,
              "schema": {
                "type": "number"
              }
            }
        ],

        "responses": {

          "200": {
            "description": "Successful response",
            "content": {
               "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/CoinData"
                    }
                  },
                  "example": [
                    {
                      "rank": 1,
                      "id" : "bitcoin",
                      "coin": "Bitcoin",
                      "presentPrice":45908,
                      "oneHourPrice" : 0.4,
                      "oneDayPrice" : 0.23,
                      "oneWeekPrice" : 0.39,
                      "priceChange1h": 40342,
                      "priceChange1d":43590,
                      "priceChange1w":41023,
                      "volumeTraded":19405859,
                      "contractAddress": "X04584958fj59fjfj958",
                      "url": "www.blockinchain.bitly.net"
                    }
                  ]
                }
            }

          },

          "408": {
            "description": "Connectivity Problem",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "Check your interconnectivity to the server"
                }
              }
            }
          },

          "406": {
            "description": "Bad Query Format passed in",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "skip and limit if used must be a valid number"
                }
              }
            }
          },

          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "Internal server error occurred"
                }
              }
            }
          }

        }
      }
    },

