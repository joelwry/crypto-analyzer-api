    "/markets/byPair": {
      "get": {
        "summary": "Retrieves the pair trading prices of a coin from the exchange market",
        "description": "This endpoint takes in a query of : 'coinId','fromId' and toId. The fromId should be the symbol of the coinId passed in the query, while the toId is the symbol of any other valid coin you aim to retrieve the pair trading of the asset. This should get the coin paired to an asset",
        "parameters": [
          {
            "name": "coinId",
            "in": "query",
            "description": "The ID of the coin",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example":"bitcoin"
          },
          {
            "name": "fromId",
            "in": "query",
            "description": "The coin symbol equivalent to the id of the coin",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example":"btc"
          },
          {
            "name": "toId",
            "in": "query",
            "description": "This should be the symbol of any coin you want to pair together with the coinId ",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example":"eth"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ExchangeData"
                  }
                },
                "example": [
