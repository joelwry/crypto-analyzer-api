    "/historicalprice": {

      "get": {
        "summary": "Retrieves an historical price data of the specified coin",
        "description": "This retrieves an analyzed historical price trend of a cryptocurrency coin. This endpoint takes in period, coinId as query and an optional query of includeTrend true or false. add the trend shows if the coin is has followed a declined trend or incremental trend in respect to the preceeding price",
        "parameters": [
          {
            "name": "coinId",
            "in": "query",
            "description": "The ID of the coin",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example":"ethereum"
          },
          {
            "name": "period",
            "in": "query",
            "description": "The timeframe of the coin price to retrieve such as retrieving the 1 week, 24 hours price trend etc",
